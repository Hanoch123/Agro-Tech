            cout<<endl<<"Enter your choice : ";
            cin>>n;
            switch(n)
            {
            case 1:
            	cout<<k;
                sign_up(u,k);
                cout<<k;
                break;
            case 2:
            	system("CLS");
	        	int pos;
	        	bool b;
    	    	char p[10];
        		setcolor(2);
        		cout<<"\t---------------------------\n"<<endl;
        		setcolor(32);
