    }
    void Settings(user a[],int pos)
    {
    	system("CLS");
        char p[10];
        char np1[10];
        char np2[10];
        char h[10];
        int n;
        setcolor(12);
        cout<<"\t\t------------------\n"<<endl;
        setcolor(192);
		cout<<"\t\t*****Settings*****\n"<<endl;
        setcolor(12);
        cout<<"\t\t------------------"<<endl;
        setcolor(7);
		cout<<"\t(1)Account\n"<<"\t(2)Change password\n";
        cout<<"\t(3)Change Address\n"<<"\t(4)Feedback\n"<<"\t(5)Exit\n";
        cout<<"\nEnter your choice : ";
        cin>>n;
        switch(n)
        {
        case 1:
            Profile(a,pos);
            break;
        case 2:
            char r;
            cout<<"\tDo you want to change your password (y/n) : ";
            cin>>r;
            if(r=='n'||r=='N')
            {
                Settings(a,pos);
            }
            else if(r=='y'||r=='Y')
            {
                cout<<"\n\tENTER PREVIOUS PASSWORD : ";
                for(int i=0;i<10;i++)
                {
                    p[i] = _getch();
                    if(p[i] == 13){break;}
                    else{
                    	_putch('*');
					}
                }
                if(strcmp(a[pos].pass,p)==0)
                {
                    cout<<"\n\n\n\tENTER NEW PASSWORD (No space and 10 chars only): ";
                    for(int i=0;i<10;i++)
                    {
                        np1[i] = _getch();
                        if(np1[i] == 13){break;}
                        else{_putch('*');}
                    }
                    cout<<"\n\tRE-ENTER NEW PASSWORD : ";
                    for(int i=0;i<10;i++)
                    {
                        np2[i] = _getch();
                        _putch('*');
                        if(np2[i] == 13){break;}
                        else{
                        	_putch('*');
						}
                    }
                    cout<<endl<<np1<<"\t"<<np2<<endl;
                    if(strcmp(np1,np2)==0)
                    {
                        for(int i=0;i<10;i++)
						{
                        a[pos].pass[i]= np1[i];
                        }
                        setcolor(10);
                        cout<<"\n\tPassword successfully changed!\n"<<endl;
                        setcolor(7);
						system("PAUSE");
                    }
                    else{
                        setcolor(4);
                        cout<<"\n\tPassword Don't Match!\n"<<endl;
                        setcolor(7);
                        system("PAUSE");
                    }
                }
                else
                {
                    setcolor(4);
                    cout<<"\n\tIncorrect password!\n";
                    setcolor(7);
                    system("PAUSE");
                }
            }
            break;
        case 3:
            char k;
            cout<<"\tDo you want to change your Address (y/n) : ";
            cin>>k;
            if(k=='n'||k=='N')
            {
                Settings(a,pos);
            }
            else if(k=='y'||k=='Y')
            {
                cout<<"\n\tENTER PREVIOUS PASSWORD : ";
                for(int i=0;i<10;i++)
                {
                    h[i] = _getch();
                    if(h[i] == 13){break;}
                    else{
                        _putch('*');
                    }
                }
                if(strcmp(a[pos].pass,p)==0)
                {
                    cout<<"\n\tENTER NEW ADDRESS (No space): ";
                    cin>>a[pos].addr;
                }
                else
                {
                    setcolor(4);
                    cout<<"\n\tIncorrect password!\n";
                    setcolor(7);
                    system("PAUSE");
                }
            }
            break;
        case 4:
        	system("CLS");
        	setcolor(96);
        	cout<<"*****FEEDBACK*****"<<endl;
        	setcolor(7);
        	cout<<"Feel free to give us your honest feedback : "<<endl<<endl;
        	cin>>a[pos].feed;
			cout<<"\n\nYour response is successfully recorded!\n"<<endl;
			system("PAUSE");			
            break;
        case 5:
        	setcolor(4);
        	cout<<"\n\nExiting\n\n";
        	setcolor(7);
			system("PAUSE");
            break;
        default:
            setcolor(4);
            cout<<"\n\tInvalid option\n";
            setcolor(7);
            system("PAUSE");
            break;
        }
		login(a,pos);
    }
