        setcolor(80);
        cout<<"\t\t*****PROFILE*****\n\n";
        setcolor(5);
        cout<<"\t\t-----------------\n";
		cout<<endl;
		setcolor(7);
        cout<<"\tName : "<<a[pos].name<<endl;
