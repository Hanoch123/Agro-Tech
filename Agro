                setcolor(4);
                cout<<endl<<endl<<"*****\tExiting\t*****"<<endl<<endl;
                setcolor(7);
                exit(0);
                break;
            default:
                cout<<"Invalid choice!";
                cout<<endl<<"Enter your choice : ";
                cin>>n;
                break;
            }
        }while(ch == 'y' && ch != 'n');
    }
    user sign_up(user a[],int &h)
    {
    	char t;
        system("CLS");
        setcolor(1);
        cout<<"\t\t-----------------------"<<endl<<endl;
        setcolor(48);
        cout<<"\t\t*****Enter Details*****"<<endl<<endl;
        setcolor(1);
        cout<<"\t\t-----------------------"<<endl;
        setcolor(3);
        cout<<"\n\t*(Please do not use space while enter your details!)\n\n";
        cout<<"\tNAME : ";
        setcolor(7);
        cin>>a[h].name;
        setcolor(3);
        cout<<"\tPROFESSION (Are you a farmer (y/n) : ";
        setcolor(7);
        cin>>t;
        if(t == 'y' || t == 'Y')
        {
        	a[h].prof = "Farmer";
		}
		else
		{
			setcolor(3);
			cout<<"\n\t\tPLEASE SPECIFY YOUR PROFESSION : ";
			setcolor(7);
			cin>>a[h].prof;
			cout<<"\n";
		}
        setcolor(3);
        cout<<"\tADDRESS : ";
        setcolor(7);
        cin>>a[h].addr;
        setcolor(3);
        cout<<"\tBirth Year : ";
        setcolor(7);
        cin>>a[h].y;
        char temp[10];
        setcolor(3);
        cout<<"\tCREATE PASSWORD (10 chars only) : ";
        setcolor(7);
        for (int i = 0; i < 10;i++) {
        a[h].pass[i] = _getch();
        if (a[h].pass[i] == 13) {
            break;
        }
        else {
            _putch('*');
        }
        }
        cout<<endl<<a[h].pass<<endl;
        setcolor(3);
        do{
        cout<<"\n\tRE-ENTER PASSWORD : ";
        setcolor(7);
        for (int i = 0; i < 10;i++) {
        temp[i] = _getch();
        if (temp[i] == 13) {
            break;
        }
        else {
            _putch('*');
        }
        }
        cout<<"\na = "<<a[h].pass<<"\tt = "<<temp<<endl;
        if(strcmp(a[h].pass,temp)!=0)
        {
            setcolor(4);
            cout<<"\nPassword doesn't match!"<<endl;
        }
        }while(strcmp(a[h].pass,temp)!=0);
        a[h].usno = count;count++;
        a[h].unq = a[h].name + a[h].y;
        setcolor(10);
        cout<<endl<<endl<<"\t"<<a[h].name<<" Your Account created Successfully!";
        setcolor(4);
        cout<<endl<<endl<<"\tYour unique ID is ' ";
        setcolor(6);
        cout<<a[h].unq;
        setcolor(4);
        cout<<" '"<<endl<<endl;
        setcolor(6);
        cout<<"\tPlease Exit and Re-login with your new unique Id and password"<<endl<<endl;
        setcolor(7);
        system("PAUSE");
        h = h++;
    }
    void login_page(user a[],int pos)                ///Diverting to login and password.
    {
        char p[10];
        setcolor(7);
        cout<<"\tEnter Password : ";
        for(int i=0;i<10;i++)
        {
            p[i] = _getch();
            _putch('*');
            if(p[i] == 13)break;
        }
        if(strcmp(a[pos].pass,p)==0)
        {
            login(a,pos);
        }
        else
        {
            setcolor(4);
            cout<<endl<<"\tEither User ID or Password is wrong!"<<endl<<endl;
            cout<<"\n\tPlease Enter Again!"<<endl<<endl;
            setcolor(7);
            login_page(a,pos);
        }
    }
    void login(user a[],int pos)                        ///Login page.
    {
        system("CLS");
        int k;
        time_t now = time(0);
        tm *dt = localtime(&now);
        setcolor(6);
        cout<<"\t\t------------------------------\n"<<endl;
        setcolor(96);
        cout<<"\t\t*****WELCOME TO HOME PAGE*****\n"<<endl;
        setcolor(6);
        cout<<"\t\t------------------------------"<<endl;
        setcolor(6);
        cout<<endl<<"Hello "<<a[pos].name<<"!"<<setw(50)<<dt->tm_mday<<"/"<<1 + dt->tm_mon<<"/"<<1900+ dt->tm_year<<endl;
        setcolor(3);
		cout<<endl<<"\t1. Buy products";
        setcolor(5);
		cout<<endl<<"\t2. Profile";
        setcolor(12);
		cout<<endl<<"\t3. Settings";
        setcolor(4);
		cout<<endl<<"\t4. Logout";
		setcolor(7);
        cout<<endl<<"\nEnter your choice : ";
        cin>>k;
        switch(k)
        {
        case 1:
            Buy(a,pos);
            break;
        case 2:
            Profile(a,pos);
            break;
        case 3:
            Settings(a,pos);
            break;
        case 4:
            setcolor(4);
            cout<<"\n\nSuccessfully Logged Out"<<endl<<endl;
            setcolor(7);
            system("PAUSE");
            break;
        }
    }
